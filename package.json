{
  "name": "layout-2020",
  "version": "1.0.0",
  "description": "Some example layouts to accompany Modern Layouts talk",
  "main": "index.html",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "scss": "node-sass --output-style compressed -o dist/css src/scss",
    "serve": "browser-sync start --server --files 'dist/css/*.css, **/*.html'",
    "watch:css": "onchange 'src/scss' -- npm run scss",
    "start": "run-p serve watch:css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/justinslack/layout-2020.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/justinslack/layout-2020/issues"
  },
  "homepage": "https://github.com/justinslack/layout-2020#readme",
  "devDependencies": {
    "browser-sync": "^2.26.13",
    "node-sass": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0"
  }
}
